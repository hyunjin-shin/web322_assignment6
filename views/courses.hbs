<div class="row">
    <div>
        <div class="body-header">
            <h2 class="body-header-item  float-left">Courses</h2>
            <a href="/courses/add" class="btn btn-success float-right body-header-item">Add New Course</a>
        </div>
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td>
                            <a href="/course/delete/{{courseId}}">
                                <button class="btn btn-danger">Delete</button>
                            </a>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
    {{#unless courses}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>